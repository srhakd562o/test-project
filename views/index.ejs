<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>School Attendance</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <h1>School Attendance</h1>
    
    <form action="/search" method="POST">
        <label for="date">Select a Date:</label>
        <input type="date" id="date" name="date" required>
        <button type="submit">Search</button>
    </form>

    <form action="/mark-attendance" method="POST">
        <h2>Student List</h2>
        <!-- Student search results will be displayed here -->
        <% if (students && students.length > 0) { %>
            <ul>
                <% students.forEach(student => { %>
                    <li>
                        <input type="radio" id="<%= student.id %>-present" name="<%= student.id %>" value="present">
                        <label for="<%= student.id %>-present">Present</label>
                        <input type="radio" id="<%= student.id %>-absent" name="<%= student.id %>" value="absent">
                        <label for="<%= student.id %>-absent">Absent</label>
                        <%= student.name %>
                    </li>
                <% }) %>
            </ul>
            <button type="submit">Mark Attendance</button>
        <% } else { %>
            <p>No students found.</p>
        <% } %>
    </form>

    <form action="/attendance-report" method="GET">
        <button type="submit">Fetch Attendance Report</button>
    </form>
</body>
</html>
